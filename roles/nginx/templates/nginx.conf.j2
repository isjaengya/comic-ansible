# vars 可在 role defaults 或 play 里覆盖：
# nginx_user: "www-data"  # RHEL 系可用 "nginx"
# nginx_tls_protocols: "TLSv1.2 TLSv1.3"

user {{ nginx_user | default('www-data') }};
worker_processes auto;
pid /run/nginx.pid;
error_log /var/log/nginx/error.log;

# 按发行版包含“模块配置”（不是虚拟主机）
{% if ansible_facts.os_family == "Debian" %}
include /etc/nginx/modules-enabled/*.conf;
{% elif ansible_facts.os_family == "RedHat" %}
include /usr/share/nginx/modules/*.conf;
{% endif %}

events {
    worker_connections 1024;
    # multi_accept on;
}

http {
    ##
    # Basic Settings
    ##
    sendfile on;
    tcp_nopush on;
    types_hash_max_size 2048;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # SSL Settings
    ##
    ssl_protocols {{ nginx_tls_protocols | default('TLSv1.2 TLSv1.3') }};
    ssl_prefer_server_ciphers on;

    ##
    # Logging
    ##
    access_log /var/log/nginx/access.log;

    ##
    # Gzip
    ##
    gzip on;

    ##
    # Include vhost snippets (正确位置是在 http 里)
    ##
    #include /etc/nginx/conf.d/*.conf;
    #{% if ansible_facts.os_family == "Debian" %}
    #include /etc/nginx/sites-enabled/*;
    #{% endif %}

    ##
    # Your server
    ##
    server {
        listen 80 default_server;
        server_name _;

        location ^~ /pic/ {
            proxy_pass https://image.e803560d61e7fe3a4c4caea5c14e96a2.r2.cloudflarestorage.com/;

            # 让 Nginx 用域名做 SNI
            proxy_ssl_server_name on;
            proxy_ssl_name image.e803560d61e7fe3a4c4caea5c14e96a2.r2.cloudflarestorage.com;

            # Host 头写成上游域名（与预签名 URL 主机一致）
            proxy_set_header Host image.e803560d61e7fe3a4c4caea5c14e96a2.r2.cloudflarestorage.com;
            proxy_set_header X-Real-IP         $remote_addr;
            proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            proxy_http_version 1.1;
            proxy_read_timeout 60s;

            # 放这里也行，但通常与上面的 ssl_protocols 保持一致即可
            proxy_ssl_protocols {{ nginx_tls_protocols | default('TLSv1.2 TLSv1.3') }};
        }

        location / {
            proxy_pass http://45.144.138.101:8888;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
